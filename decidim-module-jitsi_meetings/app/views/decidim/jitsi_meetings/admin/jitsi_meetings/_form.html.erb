<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>
  <div class="card-section">
    <div class="row column">
      <%= form.translated :text_field, :api, autofocus: true %>
    </div>
    <div class="row column">
      <%= form.translated :text_field, :domain, autofocus: true %>
    </div>
    <div class="row column">
      <%= form.translated :text_field, :room_name, autofocus: true %>
    </div>
  </div>
</div>