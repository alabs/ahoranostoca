<section class="wrapper-home upcoming-events bg-yellow section-padding-8">
  <div class="row">
    <div class="columns small-centered large-10 text-center mb-3">
      <h2 class="text-uppercase" style="font-size:2.2rem;line-height:1.1">Pr√≥ximas actividades</h2>
    </div>    <div class="row">
      <div class="columns medium-6">
        <% upcoming_events.first(4).each do |event| %>
          <%= card_for event, size: :s %>
        <% end %>
      </div>
      <div class="columns medium-6">
        <% if geolocation_enabled? %>
          <%= cell "decidim/meetings/meetings_map", upcoming_events %>
        <% else %>
          <% (upcoming_events - upcoming_events.first(4)).each do |event| %>
            <%= card_for event, size: :s %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="column">
        <%= link_to t("decidim.meetings.content_blocks.upcoming_events.view_all_events"), meetings_directory_path, class: "button hollow button--sc pull-right" %>
      </div>
    </div>
  </div>
</section>
